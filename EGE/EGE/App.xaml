<Application x:Class="EGE.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="clr-namespace:EGE.Converters"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <converters:EditModeToTitleConverter x:Key="EditModeToTitleConverter"/>
        <converters:EditModeToButtonTextConverter x:Key="EditModeToButtonTextConverter"/>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10 3"/>
            <Setter Property="Background" Value="#FF3F51B5"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF3F51B5"/>
        </Style>
    </Application.Resources>
    
</Application>
    
